{% extends 'common.html.twig' %}

{% block splash %}<div style="height:10rem;"></div>{% endblock %}

{% block body %}
<div class="container">
  <div class="row">

    {% for post in posts %}
    <h2>
        <a href="#">{{ post.title }}</a>
    </h2>
    <p class="lead">
        by <a href="index.php">Start Bootstrap</a>
    </p>
    <p><span class="glyphicon glyphicon-time"></span> Posted on {{ post.createdAt | date() }}</p>
    <hr>
    <img class="img-responsive" src="http://placehold.it/900x300" alt="">
    <hr />
    <p>{{ post.summary }}</p>
    <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

    <hr>
    {% endfor %}
  </div>
</div>
{% endblock %}

